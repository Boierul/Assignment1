@page "/AddAdult"

@using Assignment1.Models
@using Assignment1.Data

@inject IAdult Adult
@inject NavigationManager NavigationManager

<h3>
    AddTodo
</h3>

<EditForm Model="@newPerson" OnValidSubmit="@AddNewPerson">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group">
        User Id:<br/>
        <InputNumber @bind-Value="newPerson.Id"/>
    </div>
    <div class="form-group">
        First Name:<br/>
        <InputTextArea rows="1" @bind-Value="newPerson.FirstName"/>
    </div>
    <div class="form-group">
        Last Name:<br/>
        <InputTextArea rows="1" @bind-Value="newPerson.LastName"/>
    </div>
    <div class="form-group">
        Hair Color:<br/>
        <InputTextArea rows="1" @bind-Value="newPerson.HairColor"/>
    </div>
    <div class="form-group">
        Eye Color:<br/>
        <InputTextArea rows="1" @bind-Value="newPerson.LastName"/>
    </div>
    <div class="form-group">
        Age:<br/>
        <InputNumber @bind-Value="newPerson.Age"/>
    </div>
    <div class="form-group">
        Weight:<br/>
        <InputNumber @bind-Value="newPerson.Weight"/>
    </div>
    <div class="form-group">
        Sex:<br/>
        <InputTextArea rows="1" @bind-Value="newPerson.Sex"/>
    </div>

    <p class="actions">
        <button class="btn btn-outline-dark" type="submit">Create</button>
    </p>
</EditForm>

@code {
    private Person newPerson = new Person();

    private void AddNewPerson()
    {
        Adult.AddNewPerson(newPerson);
        NavigationManager.NavigateTo("/AdultsList");
    }

}